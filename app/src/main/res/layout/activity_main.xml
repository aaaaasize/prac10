<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/gark_green"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text35"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <Button

            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/back"

            />

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textColor="@color/grey"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text"
        android:hint="@string/text28"
        android:textColorHint="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText

            android:layout_width="165dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_text"
            android:hint="@string/text29"
            android:textColorHint="@color/grey" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:gravity="center"
            android:hint="@string/text30"
            android:textColorHint="@color/grey" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text"
        android:hint="@string/text31"
        android:textColorHint="@color/grey"
        android:gravity="top"
        />

    <Button
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rent"
        android:text="@string/text34"
        android:textColor="@color/white" />

</LinearLayout>
