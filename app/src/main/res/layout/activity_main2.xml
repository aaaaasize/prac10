<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gark_green"
    android:padding="20dp"
    android:stretchColumns="*" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text17"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/avatar_"
            android:layout_gravity="end"/>

    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_marginVertical="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text19"
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"

                    android:layout_marginTop="-10dp"
                    android:thumb="@drawable/swth"
                    android:track="@drawable/swta" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text20"
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:thumb="@drawable/swth2"
                    android:track="@drawable/swta2" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/appCompatButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
android:layout_marginTop="110dp"
            android:background="@drawable/rent"
            android:text="@string/text18"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/linearLayout"
        android:layout_width="288dp"
        android:layout_height="72dp"
        android:background="@drawable/rentagle">

        <ImageButton
            android:layout_width="60dp"
            android:layout_marginLeft="26dp"
            android:layout_height="60dp"
            android:background="@drawable/listbutton_red" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/alarm_green" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/calendar" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/settingsbutton_" />

    </LinearLayout>


</TableLayout>
