<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4"
    android:background="@color/gark_green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_gravity="start|top"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text48"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="end|top"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/back" />

    <View
        android:id="@+id/View"
        android:layout_width="272dp"
        android:layout_height="3dp"
        android:layout_row="1"
        android:layout_marginLeft="70dp"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="174dp"
        android:background="@drawable/avatar_" />

    <TextView
        android:layout_gravity="start|top"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        android:layout_marginLeft="130dp"
        android:layout_columnWeight="1"
        android:layout_marginTop="16dp"
        android:text="@string/text49"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/appCompatButton2"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rent"
        android:text="@string/text23"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/appCompatButton3"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rent"
        android:text="@string/text36"
        android:textColor="@color/white"
        />

</GridLayout>
